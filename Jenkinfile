pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'sleep 4'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                 sh 'sleep 4'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                 sh 'sleep 4'
            }
        }
    }
}
